<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
             x:Class="FinalApp.Views.Profile"
             Title="Profile"
             Style="{DynamicResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="4"
               Aspect="AspectFill"
               Source="stadium.png" />

        <acrylic:AcrylicView Grid.Row="1"
                             Grid.RowSpan="3"
                             CornerRadius="20"
                             EffectStyle="Custom"
                             VerticalOptions="Center"
                             TintColor="#04f5f0"
                             TintOpacity=".1">

            <VerticalStackLayout Padding="35">
                <Frame VerticalOptions="Center"
                       HorizontalOptions="Center"
                       HeightRequest="112"
                       WidthRequest="112"
                       CornerRadius="56"
                       Grid.Row="2">
                    <Image Source="user.png" HeightRequest="50" WidthRequest="50" />
                </Frame>
                <Label x:Name="UserLabel"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Text="{Binding UserName}"
                       Margin="15"
                       Grid.Row="3"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black" />

                <Button VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Text="SignOut"
                        Command="{Binding SignOutCommand}"
                        Margin="10"
                        Grid.Row="3"
                        FontAttributes="Bold"
                        FontSize="20"
                        TextColor="#ffffff"
                        BackgroundColor="#00ff85"
                        WidthRequest="200"
                        CornerRadius="16" />

                <!-- Toggle Switch for Light/Dark Mode -->
                <StackLayout Grid.Row="0" VerticalOptions="Start">
                    <Label Text="Switch Theme Mode" FontSize="18" FontAttributes="Bold" TextColor="White" />
                    <Switch x:Name="SwitchThemeMode" Toggled="SwitchThemeMode_Toggled"/>
                </StackLayout>
            </VerticalStackLayout>
        </acrylic:AcrylicView>
    </Grid>

</ContentPage>
